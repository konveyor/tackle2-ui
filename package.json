{
  "name": "tackle2-ui",
  "version": "2.1.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "pkg/client",
    "pkg/server",
    "pkg/qa-tests"
  ],
  "devDependencies": {
    "concurrently": "^7.0.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "dist": "rm -rf ./dist && mkdir -p ./dist/client && cp -r pkg/server dist/ && npm run build -w pkg/client && cp -r pkg/client/dist ./dist/client/",
    "proxy:hub": "kubectl port-forward svc/tackle-hub -n konveyor-tackle 9002:8080",
    "proxy:keycloak": "kubectl port-forward svc/tackle-keycloak-sso -n konveyor-tackle 9001:8080",
    "proxy:pathfinder": "kubectl port-forward svc/tackle-pathfinder -n konveyor-tackle 9003:8080",
    "proxy": "concurrently -n keycloak,hub,pathfinder \"npm:proxy:keycloak\" \"npm:proxy:hub\" \"npm:proxy:pathfinder\"",
    "server": "NODE_ENV=development node ./pkg/server/index.js",
    "start": "node ./pkg/server/index.js -r @cypress/instrument-cra",
    "start:dev": "concurrently -n proxy,server,client -c \"green.bold.inverse,blue.bold.inverse,yellow.bold.inverse\" \"npm:proxy\" \"npm:server\" \"npm:build:dev\"",
    "build:dev": "GENERATE_SOURCEMAP=true webpack --config ./pkg/client/config/webpack.dev.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run extract -w pkg/client"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
