{
  "name": "tackle2-ui",
  "version": "2.1.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "clean": "rimraf ./dist && npm run clean -ws --if-present",
    "dist": "rimraf ./dist && copyfiles -e 'node_modules/**' entrypoint.sh '**/package.json' '*/dist/**/*' ./dist",
    "build": "npm run build -ws --if-present",
    "start:dev:server": "npm run start:dev -w server",
    "start:dev:client": "npm run start:dev -w client",
    "start:dev": "concurrently -n port-forward,server,client -c 'white.bold.inverse,green.bold.inverse,blue.bold.inverse' 'npm:port-forward' 'npm:start:dev:server' 'npm:start:dev:client'",
    "start": "npm run build -w client && npm run start -w server",
    "test": "npm run test -ws --if-present --",
    "port-forward:hub": "kubectl port-forward svc/tackle-hub -n konveyor-tackle 9002:8080",
    "port-forward:keycloak": "kubectl port-forward svc/tackle-keycloak-sso -n konveyor-tackle 9001:8080",
    "port-forward": "concurrently 'npm:port-forward:*'"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "concurrently": "^8.0.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1"
  }
}
