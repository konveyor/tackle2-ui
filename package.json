{
  "name": "tackle2-ui",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "pkg/client",
    "pkg/server",
    "pkg/qa-tests"
  ],
  "devDependencies": {
    "concurrently": "^7.0.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3"
  },
  "scripts": {
    "build": "npm run build -w pkg/client",
    "build:dev": "npm run build:dev -w pkg/client",
    "proxy:hub": "kubectl port-forward svc/tackle-hub -n konveyor-tackle 9002:8080",
    "proxy:keycloak": "kubectl port-forward svc/tackle-keycloak-sso -n konveyor-tackle 9001:8080",
    "proxy:pathfinder": "kubectl port-forward svc/tackle-pathfinder-api -n konveyor-tackle 9003:8080",
    "proxy": "concurrently -n keycloak,hub,pathfinder \"npm:proxy:keycloak\" \"npm:proxy:hub\" \"npm:proxy:pathfinder\"",
    "start:dev": "concurrently -n proxy,server,client \"npm:proxy\" \"npm:start -w pkg/server\" \"npm:build:dev -w pkg/client\"",
    "start": "concurrently -n proxy,server,client \"npm:proxy\" \"npm:start -w pkg/server\" \"npm:build -w pkg/client\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run extract -w pkg/client"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
